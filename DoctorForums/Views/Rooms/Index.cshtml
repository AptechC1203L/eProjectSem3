    @foreach (var room in Model)
    {
        <div class="uk-panel uk-panel-header uk-margin-large-bottom">
            <h3 class="uk-panel-title">
                <i class="uk-icon-{{room['icon']}}"></i>
                <a href="@Url.Action("Details", "Rooms", new { id = room.id })" class="uk-link-muted">@room.name</a>
